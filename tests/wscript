# -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-
top = '..'

def build(bld):
    if not bld.env.WITH_TESTS:
        return

    tmpdir = 'TMP_TESTS_PATH="%s"' % bld.bldnode.make_node('tmp-files')
    bld.program(
        target='../unit-tests',
        name='unit-tests',
        source=bld.path.ant_glob(['*.cpp', 'unit-tests/**/*.cpp']),
        use='ndn-revoke',
        includes='.',
        defines=[tmpdir],
        install_path=None)
